<?xml version="1.0"?>
<config>
  <modules>
    <Robinhq_Robin>
      <version>0.1.0</version>
    </Robinhq_Robin>
  </modules>
  <global>
    <helpers>
      <robin>
        <class>Robinhq_Robin_Helper</class>
      </robin>
    </helpers>
	<blocks>
	  <robin>
		<class>Robinhq_Robin_Block</class>
	  </robin>
	</blocks>
  </global>
  <admin>
	<routers>
	  <robin>
	    <use>admin</use>
		<args>
		  <module>Robinhq_Robin</module>
		  <frontName>robin</frontName>
		</args>
	  </robin>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <robin module="robin">
		<title>Robin</title>
		<sort_order>100</sort_order>
		<children>
		  <robinbackend module="robin">
			<title>Configuration</title>
			<sort_order>0</sort_order>
			<action>robin/adminhtml_robinbackend</action>
		  </robinbackend>
		</children>
	  </robin>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<robin translate="title" module="robin">
			  <title>Robin</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <robinbackend translate="title">
			<title>Configuration</title>
		  </robinbackend>
			  </children>
			</robin>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<robin>
		  <file>robin.xml</file>
		</robin>
	  </updates>
	</layout>
  </adminhtml>
</config> 