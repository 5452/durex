/**
 * @see Mage_Page_Block_Template_Links
 */
?>
<?php $_links = $this->getLinks(); ?>
<?php if(count($_links)>0): ?>
<?php $Helper=$this->helper('page/userinfo'); ?>
<ul class="links"<?php if($Helper->ShowLoginInfo()): ?> id="<?php echo $Helper->ShowLoginInfo() ?>"<?php endif;?>>
    <?php foreach($_links as $_link): ?>

        <?php if ($_link instanceof Mage_Core_Block_Abstract):?>
            <?php echo $_link->toHtml() ?>
        <?php else: ?>
            <?php if($_link->getIsFirst()): ?><li class="w55"><a href="<?php echo $_link->getUrl() ?>"><img src="<?php echo $this->getSkinUrl('') ?>images/icon_user.png" ></a></li><li class="w5">|</li><?php endif; ?>
            
            <?php if($_link->getIsLast()): ?><li class="w100"><a href="<?php echo $_link->getUrl() ?>" ><?php echo $Helper->ShowLoginInfo() ?></a></li><?php endif; ?>
            
        <?php endif;?>
    <?php endforeach; ?>
</ul>
<?php endif; ?>
